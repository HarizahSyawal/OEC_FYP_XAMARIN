        <Setter Property="BoxMode" Value="Filled"/>
        <Setter Property="CornerMode" Value="Round"/>
        <Setter Property="CornerRadius" Value="4"/>
        <Setter Property="TextFontFamily" Value="Roboto"/>
        <Setter Property="TextFontSize" Value="14"/>
        <Setter Property="TextColor" Value="{StaticResource EditBaseTextColor}"/>
        <Setter Property="BackgroundColor" Value="{StaticResource EditBaseBackgroundColor}"/>
        <Setter Property="BorderColor" Value="{StaticResource EditBaseBorderColor}"/>
        <Setter Property="DisabledTextColor" Value="{StaticResource EditBaseDisabledTextColor}"/>
        <Setter Property="DisabledBackgroundColor" Value="{StaticResource EditBaseDisabledBackgroundColor}"/>
        <Setter Property="DisabledBorderColor" Value="{StaticResource EditBaseDisabledBorderColor}"/>
        <Setter Property="DisabledBorderThickness" Value="1"/>
