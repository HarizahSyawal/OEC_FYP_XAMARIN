    <Style TargetType="NavigationPage">
        <Setter Property="BarBackgroundColor" Value="{StaticResource NavigationBarColor}"/>
        <Setter Property="BarTextColor" Value="#55575c"/>
    </Style>

    <Style TargetType="Label">
        <Setter Property="FontFamily" Value="Roboto"/>
        <Setter Property="FontSize" Value="14"/>
    </Style>

    <Style TargetType="ActivityIndicator">
        <Setter Property="WidthRequest" Value="72"/>
        <Setter Property="HeightRequest" Value="72"/>
        <Setter Property="HorizontalOptions" Value="CenterAndExpand"/>
        <Setter Property="VerticalOptions" Value="CenterAndExpand"/>
        <Setter Property="Color" Value="#c02833"/>
    </Style>


    <Style x:Key="LinkLabel" TargetType="Label">
        <Setter Property="FontFamily" Value="Roboto-Medium"/>
        <Setter Property="FontSize" Value="14"/>
        <Setter Property="TextDecorations" Value="Underline"/>
    </Style>
    
    <Style x:Key="NavigationBarTitle" TargetType="Label">
        <Setter Property="HorizontalOptions" Value="StartAndExpand"/>
        <Setter Property="VerticalOptions" Value="Center"/>
        <Setter Property="Margin" Value="0,-4,0,0"/>
        <Setter Property="FontFamily" Value="Roboto-Medium"/>
        <Setter Property="FontSize" Value="20"/>
        <Setter Property="LineBreakMode" Value="TailTruncation"/>
        <Setter Property="TextColor" Value="{StaticResource TitleTextColor}"/>
    </Style>

    <Style x:Key="NavigationBarBackButton" TargetType="dxe:SimpleButton">
        <Setter Property="HorizontalOptions" Value="Start"/>
        <Setter Property="VerticalOptions" Value="Center"/>
        <Setter Property="WidthRequest" Value="32"/>
        <Setter Property="HeightRequest" Value="32"/>
        <Setter Property="Padding" Value="0,4,4,4"/>
        <Setter Property="BackgroundColor" Value="Transparent"/>
        <Setter Property="Icon" Value="icon_back_24dp"/>
        <Setter Property="IconColor" Value="{StaticResource TitleTextColor}"/>
        <Setter Property="PressedBackgroundColor" Value="Transparent"/>
        <Setter Property="PressedIconColor" Value="{StaticResource TitleTextColor}"/>
    </Style>
    
    <Style x:Key="NavigationBarIconButton" TargetType="dxe:SimpleButton">
        <Setter Property="HorizontalOptions" Value="End"/>
        <Setter Property="VerticalOptions" Value="Center"/>
        <Setter Property="WidthRequest" Value="32"/>
        <Setter Property="HeightRequest" Value="32"/>        
        <Setter Property="Padding" Value="4"/>
        <Setter Property="BackgroundColor" Value="Transparent"/>
        <Setter Property="IconColor" Value="{StaticResource TitleTextColor}"/>
        <Setter Property="PressedBackgroundColor" Value="Transparent"/>
        <Setter Property="PressedIconColor" Value="{StaticResource TitleTextColor}"/>
    </Style>

    <Style x:Key="FormItemLabel" TargetType="Label">
        <Setter Property="FontFamily" Value="Roboto"/>
        <Setter Property="FontSize" Value="14"/>
    </Style>

    <Style x:Key="FormItemGroupLabel" TargetType="Label">
        <Setter Property="FontFamily" Value="Roboto-Bold"/>
        <Setter Property="FontSize" Value="18"/>
    </Style>

    <Style x:Key="IconButton24dp" TargetType="dxe:SimpleButton">
        <Setter Property="WidthRequest" Value="24"/>
        <Setter Property="HeightRequest" Value="24"/>
        <Setter Property="Padding" Value="0"/>
        <Setter Property="IconColor" Value="{StaticResource AccentColor}"/>
        <Setter Property="TextColor" Value="{StaticResource AccentColor}"/>
        <Setter Property="BackgroundColor" Value="Transparent"/>
        <Setter Property="DisabledBackgroundColor" Value="Transparent"/>
        <Setter Property="DisabledIconColor" Value="{StaticResource EditBaseDisabledBorderColor}"/>
        <Setter Property="DisabledTextColor" Value="{StaticResource EditBaseDisabledBorderColor}"/>
        <Setter Property="PressedBackgroundColor" Value="Transparent"/>
        <Setter Property="PressedIconColor" Value="{StaticResource AccentColor}"/>
        <Setter Property="PressedTextColor" Value="{StaticResource AccentColor}"/>
    </Style>

    <Style x:Key="CameraIconButton32dp" TargetType="dxe:SimpleButton">
        <Setter Property="WidthRequest" Value="32"/>
        <Setter Property="HeightRequest" Value="32"/>
        <Setter Property="Padding" Value="5,6,6,4"/>
        <Setter Property="IconColor" Value="{StaticResource AccentColor}"/>
        <Setter Property="BackgroundColor" Value="White"/>
        <Setter Property="Icon" Value="icon_camera_24dp"/>
        <Setter Property="Text" Value=""/>
        <Setter Property="ShowShadow" Value="True"/>
    </Style>

    <Style x:Key="TextButton" TargetType="dxe:SimpleButton">
        <Setter Property="Padding" Value="4"/>
        <Setter Property="FontFamily" Value="Roboto-Medium"/>
        <Setter Property="FontSize" Value="14"/>
        <Setter Property="IconColor" Value="{StaticResource AccentColor}"/>
        <Setter Property="TextColor" Value="{StaticResource AccentColor}"/>
        <Setter Property="BackgroundColor" Value="Transparent"/>
        <Setter Property="PressedBackgroundColor" Value="Transparent"/>
    </Style>

    <Style x:Key="DropDownButton" TargetType="dxe:ComboBoxEdit">
        <Setter Property="BoxPadding" Value="4"/>
        <Setter Property="BorderThickness" Value="0"/>
        <Setter Property="FocusedBorderThickness" Value="0"/>
        <Setter Property="DisabledBorderThickness" Value="0"/>
        <Setter Property="ClearIconVisibility" Value="Auto"/>
        <Setter Property="CornerMode" Value="Round"/>
        <Setter Property="CornerRadius" Value="4"/>
        <Setter Property="TextFontFamily" Value="Roboto-Medium"/>
        <Setter Property="TextFontSize" Value="14"/>
        <Setter Property="IconColor" Value="{StaticResource AccentForegroundColor}"/>
        <Setter Property="TextColor" Value="{StaticResource AccentForegroundColor}"/>
        <Setter Property="BackgroundColor" Value="{StaticResource AccentColor}"/>
        <Setter Property="PlaceholderColor" Value="{StaticResource AccentForegroundColor}"/>
    </Style>


