        <Setter Property="ExpandAnimationLength" Value="0"/>
        <Setter Property="CollapseAnimationLength" Value="0"/>
    </Style>
    
    <Color x:Key="ExpanderIconTintColor">#55575c</Color>

    <!--EditBaseDefaultStyleColor-->
    <Color x:Key="EditBaseTextColor">#333</Color>
